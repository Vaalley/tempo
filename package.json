{
	"name": "tempo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun --filter '*' dev",
		"build": "bun --filter '*' build",
		"lint": "oxlint . --ignore-path .gitignore",
		"format": "oxfmt .",
		"format:check": "oxfmt . --check",
		"test": "bun --filter '*' test",
		"precommit": "bun run format && bun run lint && bun run test"
	},
	"devDependencies": {
		"oxfmt": "^0.21.0",
		"oxlint": "^1.42.0"
	}
}
